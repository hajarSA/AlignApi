<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension  point="org.eclipse.ui.actionSets">
   	  <actionSet label="Align Action Set" visible="true" id="Action">
         <menu label="&amp;Align" id="align">
           <separator
                  name="align">
           </separator>
         </menu>
         <action
              label="&amp;Alignment Server"
              icon="icons/align.gif"
              class="fr.inrialpes.exmo.align.plugin.neontk.AlignAction"
              tooltip="Show Alignment View"
              menubarPath="align/align"
              toolbarPath="align"
              id="fr.inrialpes.exmo.align.plugin.neontk.action">
         </action>
      </actionSet>
   </extension>
   
   <extension point="org.eclipse.ui.views">
      <view
            name="Alignment Server"
            allowMultiple="true"
            icon="icons/align.gif"
            class="fr.inrialpes.exmo.align.plugin.neontk.View"
            id="fr.inrialpes.exmo.align.plugin.neontk.view">
      </view>
      <view
            name="Alignment"
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="fr.inrialpes.exmo.align.plugin.neontk.NavigationView"
            id="fr.inrialpes.exmo.align.plugin.neontk.navigationView">
      </view>
   </extension>
   
   <extension point="com.ontoprise.ontostudio.gui.extendableDropHandler">
      <dropHandler
        class= "org.eclipse.swt.dnd.DropTargetListener"
        dragClass="com.ontoprise.ontostudio.gui.navigator.module.ModuleTreeElement"
        dropClass="org.eclipse.jface.viewers.TreeViewer">
      </dropHandler>
      
      <transferHandler
        class= "org.eclipse.swt.dnd.DropTargetListener"
        transferClass="com.ontoprise.ontostudio.gui.navigator.SelectionTransfer">
      </transferHandler>
   </extension>
         
</plugin>
